<header class="main-header style-one matizes-header">
    <div class="header-lower">
        <div class="outer-box">
            <div class="logo-stack">
                <a class="logo-focus" href="/">
                    <img src="/src/assets/matizes.svg" alt="Matizes Logo">
                </a>
                <div class="logo-text">
                    <strong>Matizes</strong>
                    <small>Pastelería & Café</small>
                </div>
            </div>
            <div class="menu-area">
                <!--Mobile Navigation Toggler-->
                <div class="mobile-nav-toggler">
                    <i class="icon-bar"></i>
                    <i class="icon-bar"></i>
                    <i class="icon-bar"></i>
                </div>
                <nav class="main-menu navbar-expand-md navbar-light">
                    <div class="collapse navbar-collapse show clearfix" id="navbarSupportedContent">
                        <ul class="navigation clearfix">
                            <li><a href="/">Inicio</a></li>
                            <li><a href="/about">Nuestra Historia</a></li>
                            <li><a href="/our-menu">Nuestra Carta</a></li>
                            <li><a href="/contact">Contacto</a></li>
                        </ul>
                    </div>
                </nav>
            </div>
            <ul class="menu-right-content clearfix">
                <!-- <li class="cart-btn">
                    <a href="/cart" style="background-image: url(/assets/images/icons/icon-bg-1.png);">
                        <i class="icon-Bag"></i>
                        <span>0</span>
                    </a>
                </li> -->
            </ul>
        </div>
    </div>

    <!-- Sticky Header -->
    <div class="sticky-header">
        <div class="outer-box">
            <figure class="logo simple">
                <a href="/"><img src="/src/assets/matizes.svg" alt="Matizes Logo"></a>
            </figure>
            <ul class="sticky-navigation">
                <li><a href="/">Inicio</a></li>
                <li><a href="/about">Nuestra Historia</a></li>
                <li><a href="/our-menu">Nuestra Carta</a></li>
                <li><a href="/contact">Contacto</a></li>
            </ul>
        </div>
    </div>
</header>

<style>
    .matizes-header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 50;
    }

    .matizes-header .header-lower {
        background: rgba(255, 255, 255, 0.05);
        padding: 12px 32px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 28px;
        margin: 12px 32px 0;
        position: relative;
        display: flex;
        align-items: center;
        box-shadow: 0 15px 45px rgba(1, 41, 36, 0.2);
        backdrop-filter: blur(18px);
    }

    .logo-stack {
        display: flex;
        align-items: center;
        gap: 14px;
        z-index: 1;
    }

    .logo-focus {
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .logo-focus img {
        height: clamp(52px, 8vw, 96px);
        width: auto;
    }

    .logo-text {
        display: flex;
        flex-direction: column;
        line-height: 1.05;
        text-transform: uppercase;
        color: #ffffff;
        text-shadow: 0 2px 8px rgba(1, 41, 36, 0.6);
    }

    .logo-text strong {
        font-size: clamp(1.1rem, 1.8vw, 1.6rem);
        letter-spacing: 0.18em;
    }

    .logo-text small {
        font-size: 0.75rem;
        letter-spacing: 0.28em;
    }

    .matizes-header .logo img {
        height: clamp(42px, 6vw, 68px);
        width: auto;
    }

    .matizes-header .outer-box {
        align-items: center;
        position: relative;
        width: 100%;
        display: flex;
        gap: 20px;
    }

    .matizes-header .menu-area {
        margin-left: auto;
        background: transparent;
        border-radius: 999px;
        padding: 0;
        box-shadow: none;
        border: none;
        backdrop-filter: none;
    }

    .main-header .navigation {
        display: flex;
        align-items: center;
        gap: 24px;
    }

    .main-header .navigation > li > a {
        font-family: 'Nunito', sans-serif;
        font-weight: 700;
        color: #ffffff;
        padding: 6px 2px;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        font-size: 0.8rem;
        text-shadow: 0 2px 8px rgba(1, 41, 36, 0.5);
    }

    .main-header .navigation > li:hover > a,
    .main-header .navigation > li.current > a {
        color: #ff9da0 !important;
    }

    .logo-focus::after {
        content: "";
        position: absolute;
        width: clamp(200px, 30vw, 320px);
        height: clamp(200px, 30vw, 320px);
        border-radius: 50%;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.35) 0%, rgba(255, 255, 255, 0) 70%);
        z-index: -1;
    }

    .sticky-header {
        background:
            linear-gradient(135deg, rgba(255, 255, 255, 0.96), rgba(249, 252, 247, 0.9)) !important;
        backdrop-filter: blur(14px);
        box-shadow: 0 12px 30px rgba(1, 41, 36, 0.08);
        border-bottom: 1px solid rgba(255, 255, 255, 0.6);
    }

    .sticky-header .outer-box {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 32px;
    }

    .sticky-header .logo img {
        height: clamp(48px, 6vw, 80px);
        width: auto;
    }

    .sticky-navigation {
        flex: 1;
        display: flex;
        justify-content: center;
        gap: 32px;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .sticky-navigation a {
        font-family: 'Nunito', sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #012924;
        font-size: 0.85rem;
        text-decoration: none;
    }

    .sticky-navigation a:hover {
        color: #ff9da0;
    }

    @media (max-width: 767px) {
        .main-header .navigation > li > a {
            padding: 16px 12px;
            letter-spacing: 0.05em;
        }
    }
</style>
