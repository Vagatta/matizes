---
import BageryLayout from '../layouts/BageryLayout.astro';

const title = "Contacto - Matizes";
---

<BageryLayout title={title}>
    <!-- Page Title -->
    <section class="page-title centred" style="background-image: url(/assets/images/background/matizes_page_title.png);">
        <div class="auto-container">
            <div class="content-box">
                <div class="title">
                    <h1>Contacto</h1>
                </div>
                <ul class="bread-crumb clearfix">
                    <li><a href="/">Inicio</a></li>
                    <li>Contacto</li>
                </ul>
            </div>
        </div>
    </section>

    <!-- contact-section -->
    <section class="contact-section sec-pad">
        <div class="auto-container">
            <div class="sec-title centred">
                <p>Hablemos</p>
                <h2>¿Tienes alguna duda? <br />Escríbenos</h2>
            </div>
            <div class="row clearfix">
                <div class="col-lg-4 col-md-6 col-sm-12 info-column">
                    <div class="contact-info-inner">
                        <div class="single-box">
                            <h3>Horario</h3>
                            <ul class="list clearfix"> 
                                <li>Lunes - Viernes: 09:00 - 20:00</li>
                                <li>Sábados: 10:00 - 18:00</li>
                                <li>Domingos: Cerrado</li>
                            </ul>
                        </div>
                        <div class="single-box">
                            <h3>Información</h3>
                            <ul class="list clearfix"> 
                                <li>C/ Matizes 12, 28000 Madrid</li>
                                <li><a href="mailto:hola@matizes.com">hola@matizes.com</a></li>
                                <li><a href="tel:34600123456">+34 600 123 456</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-md-12 col-sm-12 form-column">
                    <div class="form-inner">
                        <h3>Déjanos un mensaje</h3>
                        <form method="post" action="#" id="contact-form" class="default-form"> 
                            <div class="row clearfix">
                                <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                    <input type="text" name="username" placeholder="Tu nombre *" required="">
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                    <input type="email" name="email" placeholder="Tu email *" required="">
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                    <textarea name="message" placeholder="¿En qué podemos ayudarte? ..."></textarea>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                                    <button class="theme-btn-one" type="submit" name="submit-form">Enviar Mensaje</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BageryLayout>
